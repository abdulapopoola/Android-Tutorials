        <script>
            var random = Math.floor(Math.random() * 52);
            let output;

            function start() {
             var input = parseInt(prompt('Please enter your guess(below 53):'), 10);

                    if(input < random) {
                        output = 'That is too low, Try Again!';
                    }
                    else if (input > random) {
                        output = 'That is too high, Try Again!';
     } else {
                        output = 'That is Correct!!';
     }

             document.getElementById('output').innerHTML = output;
            }
        </script>
